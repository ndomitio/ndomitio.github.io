@model IEnumerable<MusicDBFirstMVC.Models.Artist>

@{
    @Html.ActionLink("Create New", "Create")
}
<link href="~/ARTIST.css" rel="stylesheet" />


<p>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtistPhoto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                <img style="height:50px;width:50px;" src="@Html.DisplayFor(modelItem => item.ArtistPhoto)" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArtistID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })
            </td>
        </tr>
    }

</table>
